<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.skillsoft.jpa.Employee" table="Employee"><!--mapping a class(employee) to relational db-->
        <id name="id" column="ID"> <generator class="native"/><!--id will be automatically generated-->
        </id>
        <property name="firstName" column="FirstName"/>
        <property name="lastName" column="LastName"/>
        <property name="job" column="Job"/>
        <property name="salary" column="Salary"/>
    </class>
</hibernate-mapping>